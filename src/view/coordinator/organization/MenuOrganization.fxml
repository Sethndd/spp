<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- TODO Fix size -->

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.coordinator.organization.MenuOrganization">
    <VBox prefHeight="600.0" prefWidth="800.0">
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="80.0" prefWidth="800.0" text="Organizaciones" textAlignment="CENTER">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0">
            <TableView fx:id="organizationTable" onKeyPressed="#selectFromTableByIntro" onMouseClicked="#selectFromTableByClick" prefWidth="600.0">
                <columns>
                    <TableColumn fx:id="nameColumn" prefWidth="590.0" text="Nombre" />
                </columns>
            </TableView>
            <VBox alignment="CENTER" prefWidth="200.0" spacing="10.0">
                <Label prefWidth="180.0" text="Nombre:">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>
                <TextField fx:id="txtName" maxWidth="190.0" minWidth="190.0" prefWidth="190.0" />
                <Button fx:id="btnSearch" onKeyPressed="#searchByIntro" onMouseClicked="#searchByClick" prefWidth="180.0" text="Buscar" />

                <VBox alignment="BOTTOM_CENTER" prefHeight="437.0" prefWidth="200.0" spacing="10.0">
                    <Button fx:id="btnOpen" onMouseClicked="#openByClick" onKeyPressed="#openByIntro" prefWidth="180.0" text="Consultar organización" />
                    <Button fx:id="btnAdd" onMouseClicked="#addByClick" onKeyPressed="#addByIntro" prefWidth="180.0" text="Añadir organización" />
                    <Button fx:id="btnEdit" onMouseClicked="#editByClick" onKeyPressed="#editByIntro" prefWidth="180.0" text="Editar organización" />
                    <Button fx:id="btnDelete" onMouseClicked="#deleteByClick" onKeyPressed="#deleteProjectByIntro" prefWidth="180.0" text="Eliminar organización" />
                    <Button fx:id="btnBackward" onKeyPressed="#backwardByIntro" onMouseClicked="#backwardByClick" prefWidth="180.0" text="Volver" />
                </VBox>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
